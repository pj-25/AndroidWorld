<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticalOverviewActivity">

    <ImageView
        android:id="@+id/practical_image"
        android:layout_width="@dimen/prac_image_dimen"
        android:layout_height="@dimen/prac_image_dimen"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/smartphone" />

    <TextView
        android:id="@+id/practical_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/practical_image"
        android:layout_centerHorizontal="true"
        android:text="Practical X"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/practical_aim_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/practical_title"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Aim:"
        android:textSize="18sp" />

    <Button
        android:id="@+id/launch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="launch"
        android:text="Launch" />

    <TextView
        android:id="@+id/practical_aim_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/practical_aim_title"
        android:layout_alignLeft="@id/practical_aim_title"
        android:text="aim of the practical...." />

    <ImageView
        android:id="@+id/peaking_logo"
        android:layout_width="106dp"
        android:layout_height="204dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/android_logo_peaking" />
</RelativeLayout>