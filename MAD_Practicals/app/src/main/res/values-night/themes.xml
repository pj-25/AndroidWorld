<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MAD_Practicals" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/orange_bright</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_var</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Charcoal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/charcoal</item>
        <item name="colorPrimaryVariant">@color/persian_green</item>
    </style>

    <style name="Theme.Crayola" parent="Theme.MAD_Practicals">
        <item name="colorPrimary">@color/orange_yellow_crayola</item>
        <item name="colorPrimaryVariant">@color/sandy_brown</item>
    </style>

    <style name="Theme.Prussian" parent="Theme.MAD_Practicals">
        <item name="colorPrimary">@color/prussian_blue</item>
        <item name="colorPrimaryVariant">@color/maximum_red</item>
    </style>

    <style name="Theme.MAD_Practicals.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MAD_Practicals.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MAD_Practicals.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>